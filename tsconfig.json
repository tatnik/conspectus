{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build/esm",
    "module": "esnext",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "importHelpers": true,
    "typeRoots": ["types", "./node_modules/@types", ".rehype-highlight/*"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
